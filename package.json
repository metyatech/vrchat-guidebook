{
  "name": "vrchat-guidebook",
  "private": true,
  "version": "0.1.0",
  "description": "VRChat community guide site built with VitePress",
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:build:local": "cross-env SITE_URL=http://127.0.0.1:4174 vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:preview:host": "vitepress preview docs --host 127.0.0.1 --port 4174",
    "lint:a11y": "npm run docs:build:local && node scripts/run-pa11y.cjs",
    "lint:contrast": "npm run docs:build:local && node scripts/run-contrast.cjs",
    "verify": "npm run docs:build && npm run lint:a11y && npm run lint:contrast"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "cross-env": "^10.1.0",
    "pa11y-ci": "^4.0.1",
    "serve-handler": "^6.1.6",
    "vitepress": "^2.0.0-alpha.12"
  }
}
